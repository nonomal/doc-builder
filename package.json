  "bugs": {
    "url": "https://github.com/qxtang/doc-builder/issues"
  },
  "homepage": "https://github.com/qxtang/doc-builder#readme",
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.7",
    "@babel/preset-env": "^7.16.11",
    "@babel/runtime": "^7.17.7",
    "@types/ejs": "^3.1.0",
    "@types/fs-extra": "^9.0.13",
    "@types/jquery": "^3.5.14",
    "@types/live-server": "^1.2.1",
    "@types/markdown-it": "^12.2.3",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "eslint": "7.14.0",
    "less": "^4.1.2",
