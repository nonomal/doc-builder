{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./bin/",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "noUnusedParameters": false,
    "moduleResolution": "node",
    "strictPropertyInitialization": false,
    "module": "CommonJS",
    "strict": true,
    "target": "ES5",
    "sourceMap": false,
    "declaration": false,
    "lib": ["es2017"],
    "resolveJsonModule": true,
    "importHelpers": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "./bin/"]
}
